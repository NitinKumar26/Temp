<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <android.support.design.widget.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:elevation="@dimen/margin_5">

        <RelativeLayout
            android:id="@+id/relToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="@dimen/margin_12"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:background="@color/black_light">

            <ImageView
                android:contentDescription="@string/cd_cogmac_logo"
                android:id="@+id/imgCogmac"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="?android:attr/actionBarSize"
                android:src="@drawable/cogmac_logo" />

            <TextView
                android:id="@+id/appNameTv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/satisfy_font"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>



    <com.cogmac.brewmac.utils.VerticalViewpager
        android:id="@+id/vertical_viewpager"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@drawable/side_bottom"
        android:layout_below="@id/appBar"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_drinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/vertical_viewpager"
        android:layout_below="@id/appBar"
        android:scrollbars="none"
        android:layout_margin="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/vertical_viewpager"
        android:layout_below="@id/recyclerView_drinks">

        <ImageView
            android:contentDescription="@string/glass_image"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/glass"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>


</RelativeLayout>
