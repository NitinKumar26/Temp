<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/margin_5">

        <RelativeLayout
            android:id="@+id/relToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="@dimen/margin_12"
            android:paddingTop="@dimen/margin_10"
            android:background="@color/black_light">

            <ImageView
                android:id="@+id/imgCogmac"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:padding="@dimen/margin_6"
                android:src="@drawable/cogmac_logo" />


            <TextView
                android:id="@+id/appNameTv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="BrewMac"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/satisfy_font"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/beverage_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gradient"
        android:layout_below="@id/appBar"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe-Name"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_bev_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/appBar"
        android:layout_toEndOf="@id/beverage_name"
        android:layout_margin="16dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edTv_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recipe Name :"/>

        <EditText
            android:id="@+id/edTv_recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description :"/>

        <EditText
            android:id="@+id/edTv_recipe_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type :"/>

        <EditText
            android:id="@+id/edTv_recipe_sub_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price :"/>

        <EditText
            android:id="@+id/edTv_recipe_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Visibility"/>



        <EditText
            android:id="@+id/edTv_bev_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image :"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:text="Ingredients"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="12dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:text="Add/Update"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginStart="12dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear for New Entry"
            android:textSize="16sp"
            android:background="@drawable/button_gradient"
            android:padding="12dp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginStart="12dp"/>

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_rubbish_bin"
        android:layout_alignParentBottom="true"
        app:fabSize="auto"
        android:layout_margin="32dp"/>





</RelativeLayout>