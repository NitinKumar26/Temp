<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:id="@+id/appBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    app:elevation="@dimen/margin_5">

    <RelativeLayout
        android:id="@+id/relToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:paddingStart="@dimen/margin_12"
        android:paddingEnd="@dimen/margin_12"
        android:paddingTop="@dimen/margin_10"
        android:background="@color/black_light">

        <ImageView
            android:contentDescription="@string/cd_cogmac_logo"
            android:id="@+id/imgCogmac"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:src="@drawable/cogmac_logo" />

        <TextView
            android:id="@+id/appNameTv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/color_sky_blue"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/signika_bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:ignore="SpUsage" />

    </RelativeLayout>

</com.google.android.material.appbar.AppBarLayout>